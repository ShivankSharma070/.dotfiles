Config { font    = "xft:Mononoki Nerd Font Mono:weight=bold:pixelsize=10:antialias=true:hinting=true"
       , additionalFonts = [ "xft:Mononoki Nerd Font:pixelsize=10:antialias=true:hinting=true"
                            , "xft:Font Awesome 5 Free Solid:pixelsize=11"
                            ]
       , bgColor = "#282c34"
       , fgColor = "#ff6c6b"
       , position = Top

       , commands = [
                    -- Time and date
                      Run Date "<fn=2>\xf017</fn> %b %d-(%H:%M)" "date" 50
                      -- Network up and down
                    , Run Network "wlp6s0" ["-t", "<fn=2>\xf0ab</fn> <rx>kb <fn=2>\xf0aa</fn> <tx>kb"] 20
                      -- Cpu usage in percent
                    , Run Cpu ["-t", "<fn=2>\xf108</fn> cpu:<total>%"] 20
                      -- Ram used nuMber and percent
                    , Run Memory ["-t", "<fn=2>\xf233</fn> mem: <used>M <usedratio>%"] 20
                      -- Disk space free
                    , Run DiskU [("/", "<fn=2>\xf0c7</fn> hdd: <free>")] [] 60
                      -- Runs custom script to check for pacman updates.
                    -- This script is in my dotfiles repo in .local/bin.
                      --, Run Com "/home/dt/.local/bin/pacupdate" [] "pacupdate" 36000
                      -- Runs a standard shell command 'uname -r' to get kernel version
                    , Run Com "users" [] "" 3600
                    , Run UnsafeStdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "<fc=#666666>|</fc> %UnsafeStdinReader%}{<fc=#b3afc2><action=`stacer`>%users% </action></fc><fc=#666666>|</fc><fc=#ecbe7b> <action=`alacritty -e htop`>%cpu%</action> </fc><fc=#666666>|</fc><fc=#ff6c6b> <action=`alacritty -e htop`>%memory%</action> </fc><fc=#666666>|</fc><fc=#51afef> <action=`alacritty -e htop`>%disku%</action> </fc><fc=#666666>|</fc><fc=#98be65> <action=`alacritty -e sudo iftop -i wlp6s0`>%wlp6s0%</action></fc> <fc=#666666>|</fc> <fc=#906fab>%date%</fc>"}
